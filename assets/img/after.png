<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f6f8fa;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ffffff;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bgGradient)"/>
  
  <!-- GitHub-style header -->
  <rect x="0" y="0" width="400" height="60" fill="#24292f"/>
  <rect x="20" y="20" width="20" height="20" fill="#ffffff" rx="3"/>
  <text x="50" y="35" font-family="Arial, sans-serif" font-size="14" fill="#ffffff" font-weight="bold">GitHub</text>
  
  <!-- Repository info -->
  <rect x="20" y="80" width="360" height="40" fill="#ffffff" stroke="#d0d7de" stroke-width="1" rx="6"/>
  <text x="30" y="100" font-family="Arial, sans-serif" font-size="12" fill="#656d76">owner / repository-name</text>
  <text x="30" y="115" font-family="Arial, sans-serif" font-size="16" fill="#24292f" font-weight="600">Issue #123: Bug in authentication</text>
  
  <!-- Issue content -->
  <rect x="20" y="140" width="360" height="120" fill="#ffffff" stroke="#d0d7de" stroke-width="1" rx="6"/>
  
  <!-- Author info -->
  <circle cx="40" cy="160" r="12" fill="#0969da"/>
  <text x="60" y="165" font-family="Arial, sans-serif" font-size="12" fill="#24292f" font-weight="600">username</text>
  
  <!-- AFTER: Absolute timestamps -->
  <text x="60" y="180" font-family="Arial, sans-serif" font-size="11" fill="#656d76">opened this issue</text>
  <text x="140" y="180" font-family="Arial, sans-serif" font-size="11" fill="#24292f" font-weight="bold">2024-09-12 14:30</text>
  
  <text x="60" y="200" font-family="Arial, sans-serif" font-size="11" fill="#656d76">commented</text>
  <text x="120" y="200" font-family="Arial, sans-serif" font-size="11" fill="#24292f" font-weight="bold">2024-09-13 09:15</text>
  
  <text x="60" y="220" font-family="Arial, sans-serif" font-size="11" fill="#656d76">last edited</text>
  <text x="130" y="220" font-family="Arial, sans-serif" font-size="11" fill="#24292f" font-weight="bold">2024-09-14 16:25</text>
  
  <!-- Issue description -->
  <text x="30" y="240" font-family="Arial, sans-serif" font-size="12" fill="#24292f">This is a sample GitHub issue showing absolute timestamps...</text>
  
  <!-- Label -->
  <rect x="300" y="150" width="60" height="20" fill="#d73a49" rx="10"/>
  <text x="315" y="163" font-family="Arial, sans-serif" font-size="10" fill="#ffffff" font-weight="bold">bug</text>
  
  <!-- Highlight effect for absolute timestamps -->
  <rect x="135" y="170" width="100" height="15" fill="#fff3cd" opacity="0.7" rx="3"/>
  <rect x="115" y="190" width="100" height="15" fill="#fff3cd" opacity="0.7" rx="3"/>
  <rect x="125" y="210" width="100" height="15" fill="#fff3cd" opacity="0.7" rx="3"/>
  
  <!-- Title -->
  <text x="200" y="30" font-family="Arial, sans-serif" font-size="16" fill="#24292f" font-weight="bold">AFTER: Absolute Timestamps</text>
</svg>
